{
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "root": true,
    "env": {
      "browser": true,
      "jest/globals": true
    },
    "parser": "babel-eslint",
    "plugins": [
      "flowtype",
      "jest",
      "jsx-a11y",
      "react"
    ],
    "rules": {
      "linebreak-style": "off",
      "jsx-a11y/label-has-for": "off"
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    }
  }
